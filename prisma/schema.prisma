// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // Optional for demo mode
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  birthData Json     // Store birth data as JSON
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  astrologicalData AstrologicalData[]
  chatMessages     ChatMessage[]
  sessions         Session[]

  @@map("users")
}

model AstrologicalData {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Prokerala API data
  kundliData    Json? // Birth chart data
  dashaData     Json? // Planetary periods
  panchangData  Json? // Hindu calendar data
  
  // Computed summary for quick access
  ascendant     String?
  moonSign      String?
  sunSign       String?
  currentDasha  String?
  
  // Metadata
  computedAt    DateTime @default(now())
  provider      String   @default("prokerala")
  
  @@map("astrological_data")
}

model ChatMessage {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  message   String
  response  String
  timestamp DateTime @default(now())
  
  @@map("chat_messages")
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  
  @@map("sessions")
}